{
  "git": {
    "requireBranch": "main",
    "commitMessage": "ðŸ”– chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "pnpm standard"],
    "after:npm:release": "echo Successfully published ${name} v${version} to npm. ðŸ“¦",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}. ðŸš€"
  },
  "github": {
    "release": true
  },
  "npm": {
    "versionArgs": ["--allow-same-version", "--workspaces-update=false"],
    "ignoreVersion": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": "angular",
      "parserOpts": {
        "headerPattern": "^(\\S*) (\\w*)(?:\\(([\\w$.*\\- ]*)\\))?: (.*)$",
        "headerCorrespondence": ["emoji", "type", "scope", "subject"]
      }
    }
  }
}
